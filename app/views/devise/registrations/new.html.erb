<h2 class="titleform">Sign up</h2>

<div class ="centerform">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div><%= f.label :username %><br />
    <%= f.text_field :username, :autofocus => true, :placeholder => "John Doe" %></div>
    <div><%= f.label :email %><br />
    <%= f.email_field :email, :placeholder => "johndoe@example.com"%></div>

    <div><%= f.label :password %><br />
    <%= f.password_field :password %></div>

    <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %></div>

    <div class="lastdiv"><%= f.submit "Sign up" , :id=> "signup", :class => "btn btn-lg"%></div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
